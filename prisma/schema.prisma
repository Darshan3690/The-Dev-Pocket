datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  projects  Project[]
  stats     UserStats?
  createdAt DateTime @default(now())
}

model UserStats {
  id              String   @id @default(uuid())
  userId          String   @unique
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  points          Int      @default(0)
  currentStreak   Int      @default(0)
  lastActiveDate  DateTime?
  dailyGoalTarget Int      @default(100)
  dailyGoalProgress Int    @default(0)
  tasksCompleted  Int      @default(0)
  tasksTotal      Int      @default(0)
  updatedAt       DateTime @updatedAt
  createdAt       DateTime @default(now())
}

model Project {
  id        String   @id @default(uuid())
  title     String
  category  String
  aiScore   Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime @default(now())
}

model ContactSubmission {
  id        String   @id @default(uuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  status    String   @default("new") // new, read, replied, resolved
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([status])
  @@index([createdAt])
}

model NewsletterSubscriber {
  id             String    @id @default(uuid())
  email          String    @unique
  name           String?
  status         String    @default("active") // active, unsubscribed, bounced
  subscribedAt   DateTime  @default(now())
  unsubscribedAt DateTime?
  source         String?   // website, referral, etc.
  preferences    Json?     // JSON object for email preferences
  verifiedAt     DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@index([email])
  @@index([status])
  @@index([subscribedAt])
}
